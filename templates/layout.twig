    <!-- Global Search Script -->
    <script>
    document.addEventListener('DOMContentLoaded', function() {
        const searchInput = document.getElementById('globalSearch');
        const searchResults = document.getElementById('searchResults');
        let searchTimeout;
        let selectedIndex = -1;

        function doSearch(query) {
            if (query.length < 2) {
                searchResults.innerHTML = '<div class="text-muted p-3">Mindestens 2 Zeichen eingeben...</div>';
                return;
            }

            searchResults.innerHTML = '<div class="text-center p-3"><span class="spinner-border spinner-border-sm"></span> Suche l√§uft...</div>';

            fetch('api/search.php?q=' + encodeURIComponent(query))
                .then(response => response.json())
                .then(data => {
                    if (data.results && data.results.length > 0) {
                        let html = '';
                        data.results.forEach((result, index) => {
                            html += `
                                <div class="list-group-item search-result-item" data-index="${index}" data-type="${result.type}" data-id="${result.id}">
                                    <div class="d-flex align-items-center">
                                        <div class="search-icon me-3">
                                            ${result.icon || '<i class="bx bx-search"></i>'}
                                        </div>
                                        <div class="flex-grow-1">
                                            <h6 class="mb-1">${result.title}</h6>
                                            <p class="mb-0 text-muted small">${result.subtitle || ''}</p>
                                        </div>
                                        <small class="text-muted">${result.type}</small>
                                    </div>
                                </div>
                            `;
                        });
                        searchResults.innerHTML = '<div class="list-group">' + html + '</div>';
                        
                        // Add click handlers
                        document.querySelectorAll('.search-result-item').forEach(item => {
                            item.addEventListener('click', function() {
                                const type = this.dataset.type;
                                const id = this.dataset.id;
                                handleSearchItemClick(type, id);
                            });
                        });
                    } else {
                        searchResults.innerHTML = '<div class="text-muted p-3">Keine Ergebnisse gefunden</div>';
                    }
                })
                .catch(error => {
                    searchResults.innerHTML = '<div class="text-danger p-3">Fehler bei der Suche</div>';
                });
        }

        function handleSearchItemClick(type, id) {
            // Navigate based on type
            switch(type.toLowerCase()) {
                case 'patient':
                    window.location.href = 'patient.php?id=' + id;
                    break;
                case 'owner':
                case 'besitzer':
                    window.location.href = 'owner.php?id=' + id;
                    break;
                case 'appointment':
                case 'termin':
                    window.location.href = 'appointments.php?id=' + id;
                    break;
                case 'invoice':
                case 'rechnung':
                    window.location.href = 'invoices.php?id=' + id;
                    break;
                default:
                    console.log('Unknown type:', type);
            }
        }

        // Debounced search
        if (searchInput) {
            searchInput.addEventListener('input', function(e) {
                clearTimeout(searchTimeout);
                searchTimeout = setTimeout(() => {
                    doSearch(e.target.value);
                }, 300);
            });

            // Keyboard navigation
            searchInput.addEventListener('keydown', function(e) {
                const items = document.querySelectorAll('.search-result-item');
                
                if (e.key === 'ArrowDown') {
                    e.preventDefault();
                    selectedIndex = Math.min(selectedIndex + 1, items.length - 1);
                    updateSelection(items);
                } else if (e.key === 'ArrowUp') {
                    e.preventDefault();
                    selectedIndex = Math.max(selectedIndex - 1, 0);
                    updateSelection(items);
                } else if (e.key === 'Enter' && selectedIndex >= 0) {
                    e.preventDefault();
                    if (items[selectedIndex]) {
                        items[selectedIndex].click();
                    }
                }
            });
        }

        function updateSelection(items) {
            items.forEach((item, index) => {
                if (index === selectedIndex) {
                    item.classList.add('active');
                    item.scrollIntoView({ block: 'nearest' });
                } else {
                    item.classList.remove('active');
                }
            });
        }
    });
    </script>
    
    <!-- Theme Toggle Script -->
    <script>
    document.addEventListener('DOMContentLoaded', function() {
        const darkModeIcon = document.querySelector('.dark-mode-icon');
        if (darkModeIcon) {
            darkModeIcon.addEventListener('click', function() {
                document.body.classList.toggle('dark-theme');
                const isDark = document.body.classList.contains('dark-theme');
                localStorage.setItem('tierphysio-theme', isDark ? 'dark' : 'light');
                
                // Update icon
                const icon = this.querySelector('i');
                if (icon) {
                    icon.className = isDark ? 'bx bx-sun' : 'bx bx-moon';
                }
            });

            // Load saved theme
            const savedTheme = localStorage.getItem('tierphysio-theme');
            if (savedTheme === 'dark') {
                document.body.classList.add('dark-theme');
                const icon = darkModeIcon.querySelector('i');
                if (icon) {
                    icon.className = 'bx bx-sun';
                }
            }
        }
    });
    </script>
    
