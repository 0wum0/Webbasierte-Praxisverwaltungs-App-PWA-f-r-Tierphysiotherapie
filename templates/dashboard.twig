        <div class="stat-icon success">
            <i class='bx bx-calendar'></i>
        </div>
        <div class="stat-content">
            <div class="stat-value">{{ incomeYear|number_format(2, ',', '.') }} €</div>
            <div class="stat-label">Dieses Jahr</div>
        </div>
    </div>
    
    <!-- Total Income -->
