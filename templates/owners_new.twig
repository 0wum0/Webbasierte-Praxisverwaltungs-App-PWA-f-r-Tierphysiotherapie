{% extends 'base.twig' %}

{% block content %}
<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
    <div class="ps-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item"><a href="dashboard.php"><i class="bx bx-home-alt"></i></a></li>
                <li class="breadcrumb-item active" aria-current="page">Besitzer</li>
            </ol>
        </nav>
    </div>
    <div class="ms-auto">
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addOwnerModal">
            <i class="bx bx-plus"></i> Besitzer hinzufügen
        </button>
    </div>
</div>

<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between mb-3">
                    <h5 class="card-title mb-0">Besitzerverwaltung</h5>
                    <span class="badge bg-primary">{{ owners|length }} Besitzer</span>
                </div>
                
                {% if errorMessage %}
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="bx bx-error-circle me-2"></i>{{ errorMessage }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                {% endif %}
                
                {% if owners|length > 0 %}
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th width="60">#</th>
                                    <th>Name</th>
                                    <th>Kontakt</th>
                                    <th width="120" class="text-center">Patienten</th>
                                    <th width="180">Aktionen</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for owner in owners %}
                                <tr>
                                    <td>{{ owner.id }}</td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-sm me-3">
                                                <span class="avatar-title bg-light text-primary rounded-circle">
                                                    <i class="bx bx-user"></i>
                                                </span>
                                            </div>
                                            <div>
                                                <strong>{{ owner.name }}</strong>
                                                <div class="text-muted small">
                                                    Erstellt: {{ owner.created_at|date('d.m.Y') }}
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        {% if owner.email %}
                                            <div><i class="bx bx-envelope me-1"></i> {{ owner.email }}</div>
                                        {% endif %}
                                        {% if owner.phone %}
                                            <div><i class="bx bx-phone me-1"></i> {{ owner.phone }}</div>
                                        {% endif %}
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-{{ owner.patients_count > 0 ? 'success' : 'secondary' }}">
                                            {{ owner.patients_count }}
                                        </span>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <button type="button" class="btn btn-outline-primary" title="Details anzeigen">
                                                <i class="bx bx-show"></i>
                                            </button>
                                            <button type="button" class="btn btn-outline-warning" title="Bearbeiten">
                                                <i class="bx bx-edit"></i>
                                            </button>
                                            <button type="button" class="btn btn-outline-danger" title="Löschen">
                                                <i class="bx bx-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <div class="text-center py-5">
                        <i class="bx bx-user-x display-1 text-muted mb-3"></i>
                        <h5 class="text-muted">Keine Besitzer vorhanden</h5>
                        <p class="text-muted">Legen Sie den ersten Besitzer an, um zu beginnen.</p>
                        <button type="button" class="btn btn-primary mt-3" data-bs-toggle="modal" data-bs-target="#addOwnerModal">
                            <i class="bx bx-plus"></i> Ersten Besitzer anlegen
                        </button>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>

<!-- Add Owner Modal -->
<div class="modal fade" id="addOwnerModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form method="POST" action="owners.php">
                <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                <input type="hidden" name="action" value="create">
                
                <div class="modal-header">
                    <h5 class="modal-title">Besitzer hinzufügen</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                
                <div class="modal-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label for="firstname" class="form-label">Vorname *</label>
                            <input type="text" class="form-control" id="firstname" name="firstname" required>
                        </div>
                        
                        <div class="col-md-6">
                            <label for="lastname" class="form-label">Nachname *</label>
                            <input type="text" class="form-control" id="lastname" name="lastname" required>
                        </div>
                        
                        <div class="col-md-6">
                            <label for="email" class="form-label">E-Mail</label>
                            <input type="email" class="form-control" id="email" name="email">
                        </div>
                        
                        <div class="col-md-6">
                            <label for="phone" class="form-label">Telefon</label>
                            <input type="tel" class="form-control" id="phone" name="phone">
                        </div>
                        
                        <div class="col-12">
                            <label for="street" class="form-label">Straße & Hausnummer</label>
                            <input type="text" class="form-control" id="street" name="street">
                        </div>
                        
                        <div class="col-md-4">
                            <label for="zip" class="form-label">PLZ</label>
                            <input type="text" class="form-control" id="zip" name="zip" maxlength="10">
                        </div>
                        
                        <div class="col-md-8">
                            <label for="city" class="form-label">Stadt</label>
                            <input type="text" class="form-control" id="city" name="city">
                        </div>
                    </div>
                    
                    <div class="alert alert-info mt-3">
                        <i class="bx bx-info-circle me-2"></i>
                        Mindestens eine Kontaktmöglichkeit (E-Mail oder Telefon) muss angegeben werden.
                    </div>
                </div>
                
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Abbrechen</button>
                    <button type="submit" class="btn btn-primary">Speichern</button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
.card {
    box-shadow: var(--bs-box-shadow-sm);
    border-radius: 12px;
    border: 1px solid var(--color-border);
    background: var(--color-bg);
}

.table {
    color: var(--color-text);
}

.table-light {
    background: var(--color-bg-secondary);
}

.avatar-title {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.btn-primary {
    background: var(--primary-gradient);
    border: none;
}

.btn-primary:hover {
    background: linear-gradient(135deg, #6A4CAE, #A898C7);
}

.modal-content {
    background: var(--color-bg);
    color: var(--color-text);
}

.form-control, .form-select {
    background-color: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    color: var(--color-text);
}

.form-control:focus, .form-select:focus {
    background-color: var(--color-bg);
    border-color: var(--color-primary);
    box-shadow: 0 0 0 0.25rem rgba(123, 91, 190, 0.25);
}
</style>
{% endblock %}