{% extends 'base.twig' %}

{% block content %}
<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
    <div class="ps-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item"><a href="dashboard.php"><i class="bx bx-home-alt"></i></a></li>
                <li class="breadcrumb-item active" aria-current="page">Notizen</li>
            </ol>
        </nav>
    </div>
    <div class="ms-auto">
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addNoteModal">
            <i class="bx bx-plus"></i> Notiz hinzufügen
        </button>
    </div>
</div>

<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between mb-3">
                    <h5 class="card-title mb-0">Notizverwaltung</h5>
                    <span class="badge bg-primary">{{ notes|length }} Notizen</span>
                </div>
                
                {% if errorMessage %}
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="bx bx-error-circle me-2"></i>{{ errorMessage }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                {% endif %}
                
                {% if notes|length > 0 %}
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th width="150">Datum</th>
                                    <th>Notiz</th>
                                    <th width="250">Zugeordnet zu</th>
                                    <th width="180">Aktionen</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for note in notes %}
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-sm me-3">
                                                <span class="avatar-title bg-light text-primary rounded-circle">
                                                    <i class="bx bx-note"></i>
                                                </span>
                                            </div>
                                            <div>
                                                <strong>{{ note.created_at|date('d.m.Y') }}</strong>
                                                <div class="text-muted small">
                                                    {{ note.created_at|date('H:i') }} Uhr
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="text-truncate d-inline-block" style="max-width: 400px;" title="{{ note.content }}">
                                            {{ note.content }}
                                        </span>
                                    </td>
                                    <td>
                                        {% if note.patient_name != '-' %}
                                            <div><i class="bx bx-heart me-1"></i> Patient: {{ note.patient_name }}</div>
                                        {% endif %}
                                        {% if note.owner_name != '-' %}
                                            <div><i class="bx bx-user me-1"></i> Besitzer: {{ note.owner_name }}</div>
                                        {% endif %}
                                        {% if note.patient_name == '-' and note.owner_name == '-' %}
                                            <span class="text-muted">Allgemeine Notiz</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <button type="button" class="btn btn-outline-primary" title="Details anzeigen">
                                                <i class="bx bx-show"></i>
                                            </button>
                                            <button type="button" class="btn btn-outline-warning" title="Bearbeiten">
                                                <i class="bx bx-edit"></i>
                                            </button>
                                            <button type="button" class="btn btn-outline-danger" title="Löschen">
                                                <i class="bx bx-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <div class="text-center py-5">
                        <i class="bx bx-note display-1 text-muted mb-3"></i>
                        <h5 class="text-muted">Keine Notizen vorhanden</h5>
                        <p class="text-muted">Fügen Sie die erste Notiz hinzu, um zu beginnen.</p>
                        <button type="button" class="btn btn-primary mt-3" data-bs-toggle="modal" data-bs-target="#addNoteModal">
                            <i class="bx bx-plus"></i> Erste Notiz hinzufügen
                        </button>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>

<!-- Add Note Modal -->
<div class="modal fade" id="addNoteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form method="POST" action="notes.php">
                <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                <input type="hidden" name="action" value="create">
                
                <div class="modal-header">
                    <h5 class="modal-title">Notiz hinzufügen</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                
                <div class="modal-body">
                    <div class="row g-3">
                        <div class="col-12">
                            <label for="content" class="form-label">Notiztext *</label>
                            <textarea class="form-control" id="content" name="content" rows="4" required 
                                      placeholder="Geben Sie hier Ihre Notiz ein..."></textarea>
                        </div>
                        
                        <div class="col-md-6">
                            <label for="patient_id" class="form-label">Patient zuordnen (optional)</label>
                            <select class="form-select" id="patient_id" name="patient_id">
                                <option value="0">-- Keine Zuordnung --</option>
                                {% for patient in patients %}
                                    <option value="{{ patient.id }}">{{ patient.name }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        
                        <div class="col-md-6">
                            <label for="owner_id" class="form-label">Besitzer zuordnen (optional)</label>
                            <select class="form-select" id="owner_id" name="owner_id">
                                <option value="0">-- Keine Zuordnung --</option>
                                {% for owner in owners %}
                                    <option value="{{ owner.id }}">{{ owner.name }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    
                    <div class="alert alert-info mt-3">
                        <i class="bx bx-info-circle me-2"></i>
                        Sie können eine Notiz einem Patienten, einem Besitzer oder beiden zuordnen. 
                        Lassen Sie die Felder leer für eine allgemeine Notiz.
                    </div>
                </div>
                
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Abbrechen</button>
                    <button type="submit" class="btn btn-primary">Speichern</button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
.card {
    box-shadow: var(--bs-box-shadow-sm);
    border-radius: 12px;
    border: 1px solid var(--color-border);
    background: var(--color-bg);
}

.table {
    color: var(--color-text);
}

.table-light {
    background: var(--color-bg-secondary);
}

.avatar-title {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.btn-primary {
    background: var(--primary-gradient);
    border: none;
}

.btn-primary:hover {
    background: linear-gradient(135deg, #6A4CAE, #A898C7);
}

.modal-content {
    background: var(--color-bg);
    color: var(--color-text);
}

.form-control, .form-select {
    background-color: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    color: var(--color-text);
}

.form-control:focus, .form-select:focus {
    background-color: var(--color-bg);
    border-color: var(--color-primary);
    box-shadow: 0 0 0 0.25rem rgba(123, 91, 190, 0.25);
}
</style>
{% endblock %}