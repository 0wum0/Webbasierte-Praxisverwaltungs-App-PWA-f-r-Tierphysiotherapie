{% extends 'base.twig' %}

{% block content %}
<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
    <div class="ps-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item"><a href="dashboard.php"><i class="bx bx-home-alt"></i></a></li>
                <li class="breadcrumb-item active" aria-current="page">Patienten</li>
            </ol>
        </nav>
    </div>
    <div class="ms-auto">
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addPatientModal">
            <i class="bx bx-plus"></i> Patient hinzufügen
        </button>
    </div>
</div>

<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between mb-3">
                    <h5 class="card-title mb-0">Patientenverwaltung</h5>
                    <span class="badge bg-primary">{{ patients|length }} Patienten</span>
                </div>
                
                {% if errorMessage %}
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="bx bx-error-circle me-2"></i>{{ errorMessage }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                {% endif %}
                
                {% if patients|length > 0 %}
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th width="60">#</th>
                                    <th width="80">Bild</th>
                                    <th>Name</th>
                                    <th>Tierart</th>
                                    <th>Rasse</th>
                                    <th>Besitzer</th>
                                    <th width="180">Aktionen</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for patient in patients %}
                                <tr>
                                    <td>{{ patient.id }}</td>
                                    <td>
                                        <div class="avatar-sm">
                                            {% if patient.image %}
                                                <img src="{{ patient.image }}" alt="{{ patient.name }}" class="avatar-title rounded-circle">
                                            {% else %}
                                                <span class="avatar-title bg-light text-primary rounded-circle">
                                                    <i class="bx bx-heart"></i>
                                                </span>
                                            {% endif %}
                                        </div>
                                    </td>
                                    <td>
                                        <strong>{{ patient.name }}</strong>
                                        <div class="text-muted small">
                                            Erstellt: {{ patient.created_at|date('d.m.Y') }}
                                        </div>
                                    </td>
                                    <td>{{ patient.species }}</td>
                                    <td>{{ patient.breed|default('-') }}</td>
                                    <td>{{ patient.owner_name }}</td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <button type="button" class="btn btn-outline-primary" title="Details anzeigen">
                                                <i class="bx bx-show"></i>
                                            </button>
                                            <button type="button" class="btn btn-outline-warning" title="Bearbeiten">
                                                <i class="bx bx-edit"></i>
                                            </button>
                                            <button type="button" class="btn btn-outline-danger" title="Löschen">
                                                <i class="bx bx-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <div class="text-center py-5">
                        <i class="bx bx-heart display-1 text-muted mb-3"></i>
                        <h5 class="text-muted">Keine Patienten vorhanden</h5>
                        <p class="text-muted">Legen Sie den ersten Patienten an, um zu beginnen.</p>
                        <button type="button" class="btn btn-primary mt-3" data-bs-toggle="modal" data-bs-target="#addPatientModal">
                            <i class="bx bx-plus"></i> Ersten Patienten anlegen
                        </button>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>

<!-- Add Patient Modal -->
<div class="modal fade" id="addPatientModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form method="POST" action="patients.php">
                <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                <input type="hidden" name="action" value="create">
                
                <div class="modal-header">
                    <h5 class="modal-title">Patient hinzufügen</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                
                <div class="modal-body">
                    <div class="row g-3">
                        <div class="col-12">
                            <label for="owner_id" class="form-label">Besitzer *</label>
                            <select class="form-select" id="owner_id" name="owner_id" required>
                                <option value="">Bitte wählen...</option>
                                {% for owner in owners %}
                                    <option value="{{ owner.id }}">{{ owner.name }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        
                        <div class="col-md-6">
                            <label for="name" class="form-label">Name *</label>
                            <input type="text" class="form-control" id="name" name="name" required>
                        </div>
                        
                        <div class="col-md-6">
                            <label for="species" class="form-label">Tierart *</label>
                            <select class="form-select" id="species" name="species" required>
                                <option value="">Bitte wählen...</option>
                                {% for s in species_list %}
                                    <option value="{{ s }}">{{ s }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        
                        <div class="col-md-6">
                            <label for="breed" class="form-label">Rasse</label>
                            <input type="text" class="form-control" id="breed" name="breed">
                        </div>
                        
                        <div class="col-md-3">
                            <label for="age" class="form-label">Alter (Jahre)</label>
                            <input type="number" class="form-control" id="age" name="age" min="0" max="50">
                        </div>
                        
                        <div class="col-md-3">
                            <label for="weight" class="form-label">Gewicht (kg)</label>
                            <input type="number" class="form-control" id="weight" name="weight" min="0" max="500" step="0.1">
                        </div>
                    </div>
                    
                    {% if owners|length == 0 %}
                        <div class="alert alert-warning mt-3">
                            <i class="bx bx-info-circle me-2"></i>
                            Es sind keine Besitzer vorhanden. Bitte legen Sie zuerst einen Besitzer an oder nutzen Sie die kombinierte Erfassung.
                            <div class="mt-2">
                                <a href="owners.php" class="btn btn-sm btn-warning">Zu Besitzer</a>
                                <a href="owner_patient.php" class="btn btn-sm btn-primary">Kombinierte Erfassung</a>
                            </div>
                        </div>
                    {% endif %}
                </div>
                
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Abbrechen</button>
                    <button type="submit" class="btn btn-primary" {% if owners|length == 0 %}disabled{% endif %}>
                        Speichern
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
.card {
    box-shadow: var(--bs-box-shadow-sm);
    border-radius: 12px;
    border: 1px solid var(--color-border);
    background: var(--color-bg);
}

.table {
    color: var(--color-text);
}

.table-light {
    background: var(--color-bg-secondary);
}

.avatar-sm {
    width: 40px;
    height: 40px;
}

.avatar-title {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.btn-primary {
    background: var(--primary-gradient);
    border: none;
}

.btn-primary:hover {
    background: linear-gradient(135deg, #6A4CAE, #A898C7);
}

.modal-content {
    background: var(--color-bg);
    color: var(--color-text);
}

.form-control, .form-select {
    background-color: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    color: var(--color-text);
}

.form-control:focus, .form-select:focus {
    background-color: var(--color-bg);
    border-color: var(--color-primary);
    box-shadow: 0 0 0 0.25rem rgba(123, 91, 190, 0.25);
}
</style>
{% endblock %}