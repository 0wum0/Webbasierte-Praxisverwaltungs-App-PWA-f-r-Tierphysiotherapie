{% extends 'base.twig' %}

{% block content %}
<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
    <div class="ps-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item"><a href="dashboard.php"><i class="bx bx-home-alt"></i></a></li>
                <li class="breadcrumb-item active" aria-current="page">Rechnungen</li>
            </ol>
        </nav>
    </div>
    <div class="ms-auto">
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addInvoiceModal">
            <i class="bx bx-plus"></i> Rechnung erstellen
        </button>
    </div>
</div>

<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between mb-3">
                    <h5 class="card-title mb-0">Rechnungsverwaltung</h5>
                    <span class="badge bg-primary">{{ invoices|length }} Rechnungen</span>
                </div>
                
                {% if errorMessage %}
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="bx bx-error-circle me-2"></i>{{ errorMessage }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                {% endif %}
                
                {% if invoices|length > 0 %}
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th width="80">#</th>
                                    <th>Patient</th>
                                    <th>Betrag</th>
                                    <th width="120">Status</th>
                                    <th>Datum</th>
                                    <th width="180">Aktionen</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for invoice in invoices %}
                                <tr>
                                    <td>{{ invoice.id }}</td>
                                    <td>{{ invoice.patient_name }}</td>
                                    <td>
                                        <strong>{{ invoice.amount|number_format(2, ',', '.') }} €</strong>
                                    </td>
                                    <td>
                                        {% if invoice.status == 'paid' %}
                                            <span class="badge bg-success">Bezahlt</span>
                                        {% elseif invoice.status == 'open' %}
                                            <span class="badge bg-warning">Offen</span>
                                        {% elseif invoice.status == 'cancelled' %}
                                            <span class="badge bg-danger">Storniert</span>
                                        {% else %}
                                            <span class="badge bg-secondary">{{ invoice.status }}</span>
                                        {% endif %}
                                    </td>
                                    <td>{{ invoice.created_at|date('d.m.Y') }}</td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <button type="button" class="btn btn-outline-primary" title="Ansehen">
                                                <i class="bx bx-show"></i>
                                            </button>
                                            <button type="button" class="btn btn-outline-info" title="Drucken">
                                                <i class="bx bx-printer"></i>
                                            </button>
                                            <button type="button" class="btn btn-outline-warning" title="Bearbeiten">
                                                <i class="bx bx-edit"></i>
                                            </button>
                                            <button type="button" class="btn btn-outline-danger" title="Löschen">
                                                <i class="bx bx-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <div class="text-center py-5">
                        <i class="bx bx-receipt display-1 text-muted mb-3"></i>
                        <h5 class="text-muted">Keine Rechnungen vorhanden</h5>
                        <p class="text-muted">Erstellen Sie die erste Rechnung, um zu beginnen.</p>
                        <button type="button" class="btn btn-primary mt-3" data-bs-toggle="modal" data-bs-target="#addInvoiceModal">
                            <i class="bx bx-plus"></i> Erste Rechnung erstellen
                        </button>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>

<!-- Add Invoice Modal -->
<div class="modal fade" id="addInvoiceModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form method="POST" action="invoices.php">
                <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                <input type="hidden" name="action" value="create">
                
                <div class="modal-header">
                    <h5 class="modal-title">Rechnung erstellen</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                
                <div class="modal-body">
                    <div class="row g-3">
                        <div class="col-12">
                            <label for="patient_id" class="form-label">Patient *</label>
                            <select class="form-select" id="patient_id" name="patient_id" required>
                                <option value="">Bitte wählen...</option>
                                {% for patient in patients %}
                                    <option value="{{ patient.id }}">
                                        {{ patient.name }} (Besitzer: {{ patient.owner_name }})
                                    </option>
                                {% endfor %}
                            </select>
                        </div>
                        
                        <div class="col-md-6">
                            <label for="amount" class="form-label">Betrag (€) *</label>
                            <input type="number" class="form-control" id="amount" name="amount" 
                                   min="0.01" step="0.01" required placeholder="0,00">
                        </div>
                        
                        <div class="col-md-6">
                            <label for="status" class="form-label">Status *</label>
                            <select class="form-select" id="status" name="status" required>
                                <option value="open" selected>Offen</option>
                                <option value="paid">Bezahlt</option>
                                <option value="cancelled">Storniert</option>
                            </select>
                        </div>
                        
                        <div class="col-12">
                            <label for="description" class="form-label">Beschreibung</label>
                            <textarea class="form-control" id="description" name="description" rows="3" 
                                      placeholder="Optionale Beschreibung der Leistungen..."></textarea>
                        </div>
                    </div>
                    
                    {% if patients|length == 0 %}
                        <div class="alert alert-warning mt-3">
                            <i class="bx bx-info-circle me-2"></i>
                            Es sind keine Patienten vorhanden. Bitte legen Sie zuerst einen Patienten an.
                            <div class="mt-2">
                                <a href="patients.php" class="btn btn-sm btn-warning">Zu Patienten</a>
                                <a href="owner_patient.php" class="btn btn-sm btn-primary">Kombinierte Erfassung</a>
                            </div>
                        </div>
                    {% endif %}
                </div>
                
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Abbrechen</button>
                    <button type="submit" class="btn btn-primary" {% if patients|length == 0 %}disabled{% endif %}>
                        Speichern
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
.card {
    box-shadow: var(--bs-box-shadow-sm);
    border-radius: 12px;
    border: 1px solid var(--color-border);
    background: var(--color-bg);
}

.table {
    color: var(--color-text);
}

.table-light {
    background: var(--color-bg-secondary);
}

.btn-primary {
    background: var(--primary-gradient);
    border: none;
}

.btn-primary:hover {
    background: linear-gradient(135deg, #6A4CAE, #A898C7);
}

.modal-content {
    background: var(--color-bg);
    color: var(--color-text);
}

.form-control, .form-select {
    background-color: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    color: var(--color-text);
}

.form-control:focus, .form-select:focus {
    background-color: var(--color-bg);
    border-color: var(--color-primary);
    box-shadow: 0 0 0 0.25rem rgba(123, 91, 190, 0.25);
}
</style>
{% endblock %}