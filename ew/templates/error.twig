{% extends "base.twig" %}

{% block title %}Fehler - Tierphysio Manager{% endblock %}

{% block content %}
<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header" style="background: linear-gradient(135deg, #ef4444, #f87171); color: white;">
                    <h4 class="mb-0">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        Ein Fehler ist aufgetreten
                    </h4>
                </div>
                <div class="card-body text-center py-5">
                    <i class="bi bi-x-circle text-danger" style="font-size: 4rem;"></i>
                    
                    <h2 class="mt-4 mb-3">{{ error_title|default('Oops! Etwas ist schiefgelaufen') }}</h2>
                    
                    <p class="text-muted mb-4">
                        {{ error_message|default('Die Seite konnte nicht geladen werden. Bitte kontaktieren Sie den Administrator, wenn das Problem weiterhin besteht.') }}
                    </p>
                    
                    {% if error_code %}
                    <div class="alert alert-light">
                        <small>Fehlercode: <strong>{{ error_code }}</strong></small>
                    </div>
                    {% endif %}
                    
                    <div class="mt-4">
                        <a href="/dashboard.php" class="btn btn-primary">
                            <i class="bi bi-house me-2"></i>
                            Zurück zum Dashboard
                        </a>
                        <button onclick="window.history.back()" class="btn btn-secondary ms-2">
                            <i class="bi bi-arrow-left me-2"></i>
                            Zurück
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}