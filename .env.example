# Umgebung: production, development, testing
APP_ENV=development
APP_DEBUG=true
APP_NAME="Tierphysio Praxis PWA"

# Datenbank
DB_HOST=localhost
DB_PORT=3306
DB_NAME=tierphysio
DB_USER=root
DB_PASS=

# SMTP / E-Mail
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@example.com
SMTP_PASS=
SMTP_FROM=noreply@example.com
SMTP_FROM_NAME="Tierphysio Praxis"
SMTP_ENCRYPTION=tls

# Session
SESSION_LIFETIME=1800
SESSION_SECURE=false
SESSION_HTTPONLY=true

# Uploads
UPLOAD_MAX_SIZE=2097152
UPLOAD_ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf

# Logging
LOG_LEVEL=debug
LOG_CHANNEL=daily
